{
    "rules": {
        "indent": [2, 2],
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"],
        "max-len": [2, 120, 4, {"ignoreUrls": true}],
        "semi": [2, "always"],
        "space-before-function-paren": [2, "always"]
    },
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "afterEach": false,
      "beforeEach": false,
      "describe": false,
      "expect": false,
      "global": false,
      "it": false,
      "module": false,
      "process": false,
      "require": false,
      "sinon": false
    }
}
